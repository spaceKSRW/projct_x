<!-- employees.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Employee List</title>
    <style>
      body {
        font-family: Arial, sans-serif;
      }

      h2 {
        text-align: center;
        margin-bottom: 20px;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }

      th, td {
        border: 1px solid black;
        text-align: left;
        padding: 8px;
      }

      th {
        background-color: grey;
      }
      td{
        color:black;
      }
    </style>
  </head>
  <body>
    <%- include('navbar/header') %>
    <h2>Employee List</h2>

    <table>
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Email</th>
          <th>Date of Birth</th>
          <th>Gender</th>
          <th>Role</th>
          <th>Phone</th>
          <th>Department</th>
          <th>Manager ID</th>
          <th>Address</th>
          <th>Joining Date</th>
        </tr>
      </thead>
      <tbody>
        <% fetchAllData.forEach(user => { %>
          <tr>
            <td><%= user.first_name %> </td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= user.dob %></td>
            <td><%= user.gender %></td>
            <td><%= user.role %></td>
            <td><%= user.phone %></td>
            <td><%= user.department %></td>
            <td><%= user.manager_id %></td>
            <td><%= user.address %></td>
            <td><%= user.join_date %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>

    <!-- Your additional HTML content goes here -->
  </body>
</html>
